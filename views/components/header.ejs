<script>
  let a = document.querySelectorAll(".menu-bunton-nav");
  let mobileMenuState = false;
  document.querySelector(".nav__c1_1").addEventListener("click", clickMenuMobile);
  function clickMenuMobile() {
    document.querySelector("#mobile-menu").classList.toggle("show");
    // Open
    if (a[0].dataset.menuButton === "show") {
      a[0].dataset.menuButton = "hide";
      a[0].classList.replace("d-block", "d-none");
      a[1].classList.replace("d-none", "d-block");
    } else if (a[0].dataset.menuButton === "hide") {
      // Close
      a[0].dataset.menuButton = "show";
      a[1].classList.replace("d-block", "d-none");
      a[0].classList.replace("d-none", "d-block");
    }
  }
  async function ToggleCartOffCanvas() {
    const bsOffcanvas = new bootstrap.Offcanvas("#offCanvasCart");
    await bsOffcanvas.toggle();
    getCart();
  }

