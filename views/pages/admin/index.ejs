<div class="flex min-h-full items-center justify-center py-5 px-4 sm:px-6 lg:px-8">
  <div class="container mx-auto w-full space-y-8 flex flex-col sm:flex-row w-fit">
    <aside class="relative bg-white max-w-md sm:mt-12 border-black/5 rounded-xl shadow-lg">
      <div class="px-6 flex flex-row sm:flex-col justify-center">
        <a href="/admin/" class="hover:bg-gray-200 rounded-r-lg flex items-center p-2 my-2 transition-colors <%= url == '/admin/' ? 'bg-gray-200' : '' %>" href="#">
          <span class="mx-4 text-lg font-normal"> Add Product </span>
          <span class="flex-grow text-right"> </span>
        </a>
        <a href="/admin/product" class="hover:bg-gray-200 rounded-r-lg flex items-center p-2 my-2 transition-colors <%= url == '/admin/product' ? 'bg-gray-200' : '' %>" href="#">
          <span class="mx-4 text-lg font-normal"> Product List </span>
          <span class="flex-grow text-right"> </span>
        </a>
      </div>
    </aside>
    <form class="mt-5 space-y-6 w-full px-4" action="/admin/add-product" method="POST">
      <div class="space-y-4 rounded-md shadow-sm max-w-lg">
        <label class="font-bold">Add Product</label>
        <div>
          <label class="sr-only">Product ID</label>
          <input name="id" type="text" required class="relative block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" placeholder="Product ID" />
        </div>
        <div>
          <label class="sr-only">Brand</label>
          <input name="brand" type="text" required class="relative block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" placeholder="Brand" />
        </div>
        <div>
          <label class="sr-only">Description</label>
          <input name="description" type="text" required class="relative block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" placeholder="Description" />
        </div>
        <div>
          <label class="sr-only">Price</label>
          <input name="price" type="text" required class="relative block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" placeholder="Price" />
        </div>
        <div>
          <label class="sr-only">Type</label>
          <input name="type" type="text" required class="relative block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" placeholder="Type" />
        </div>
        <!-- <div>
          <label class="sr-only">Type</label>
          <input type="file" class="file-input w-full border border-black/30" />
        </div> -->
      </div>

      <div class="flex gap-2">
        <button type="submit" class="group relative flex basis-1/3 justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd" />
            </svg>
          </span>
          Submit
        </button>
      </div>
    </form>
  </div>
</div>
